<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_movie_box_office"
    android:paddingBottom="@dimen/size_byte"
    android:paddingLeft="@dimen/size_word"
    android:paddingRight="@dimen/size_word"
    android:paddingTop="@dimen/size_byte">

    <ImageView
        android:id="@+id/locationThumbnail"
        android:layout_width="@dimen/movie_thumbnail_width"
        android:layout_height="@dimen/movie_thumbnail_height"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/locationComment"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="56dp"
        android:alpha="0.87"
        android:gravity="right"
        android:padding="@dimen/size_half_byte"
        android:textSize="14sp"
        android:maxWidth="180dp"
        android:layout_centerVertical="true"
        android:singleLine="false"
        android:maxLines="3" />

    <TextView
        android:id="@+id/locationMapIconId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:alpha="0.87"
        android:padding="@dimen/size_half_byte"
        android:textSize="12sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true" />

    <RatingBar
        android:id="@+id/locationScore"
        style="@android:style/Widget.Holo.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/locationMapIconId"
        android:isIndicator="true"
        android:max="5"
        android:numStars="0"
        android:visibility="invisible" />

    <TextView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:id="@+id/locationRatingBackground"
        android:background="@drawable/textview_backround"
        android:layout_centerVertical="true"
        android:layout_marginLeft="103dp"
        android:shadowColor="#000"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="50" />

    <TextView
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:text="0"
        android:id="@+id/locationRating"
        android:layout_centerVertical="true"
        android:ellipsize="middle"
        android:background="@drawable/textview_design"
        android:textSize="12sp"
        android:layout_marginLeft="104dp"
        android:textColor="#ddffffff"
        android:gravity="center" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/locationImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/picture_ocean" />

</RelativeLayout>